#include <stdio.h>

// Criando a variável nome
char nome;

int main() {
    // Escrevendo as instruções para o usuário
    printf("Escreva seu nome:");
    // Coletando o nome do usuário
    scanf("%s", nome);
    // Escrevendo o nome do usuário
    printf("%s", nome);
    return 0;
}
